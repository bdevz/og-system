  "scoring_rules": {
    "class_a_requirements": [
      "recruiter_title: required",
      "specific_tech OR role_mention: required",
      "one_of: [availability_question, tier1_firm, tech_mention]"
    ],
    "class_b_requirements": [
      "one_of: [hr_title, vague_recruiter, connection_with_note]",
      "opportunity_mention"
    ],
    "class_c_requirements": [
      "generic_connection OR industry_peer OR alumni",
      "not_class_a",
      "not_class_b",
      "not_spam"
    ],
    "class_d_requirements": [
      "one_of: [sales_pitch, mlm, insurance, spam_keywords]"
    ],
    "class_e_requirements": [
      "one_of: [trust_safety_keyword, verification_request, security_alert]"
    ]
  },
  "confidence_thresholds": {
    "high_confidence": 0.85,
    "medium_confidence": 0.70,
    "low_confidence": 0.50
  },
  "special_cases": {
    "linkedin_official": {
      "pattern": "from: LinkedIn",
      "class": "E",
      "confidence": 1.0,
      "action": "immediate_alert"
    },
    "known_client": {
      "pattern": "sender_company in client_list",
      "class": "A",
      "confidence": 1.0,
      "boost_priority": true
    },
    "repeat_sender": {
      "pattern": "sender_id in conversation_history",
      "class": "escalate_to_previous_class",
      "confidence": "based_on_history"
    }
  }
