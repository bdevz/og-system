{
  "version": "1.0.0",
  "last_updated": "2026-02-15T00:00:00Z",
  "description": "Classification rules for inbound LinkedIn messages",
  "class_definitions": {
    "A": {
      "label": "HOT",
      "description": "High-intent recruiter with specific opportunity",
      "sla_minutes": 15,
      "route_to": "rick",
      "priority": "URGENT",
      "indicators": [
        "recruiter_or_staffing_title",
        "specific_role_mentioned",
        "tech_stack_mentioned",
        "availability_question",
        "known_tier1_firm"
      ]
    },
    "B": {
      "label": "WARM",
      "description": "HR or recruiter with vague opportunity",
      "sla_minutes": 120,
      "route_to": "rick",
      "priority": "HIGH",
      "indicators": [
        "vague_role_mention",
        "hr_title_not_dedicated_recruiter",
        "connection_request_with_note",
        "opportunity_mentioned"
      ]
    },
    "C": {
      "label": "NETWORKING",
      "description": "Industry peer, alumni, group member",
      "sla_minutes": null,
      "route_to": "none",
      "priority": "LOW",
      "action": "accept_and_log",
      "indicators": [
        "generic_connection_request",
        "industry_peer",
        "group_follow_up",
        "alumni"
      ]
    },
    "D": {
      "label": "SPAM",
      "description": "Sales pitch, MLM, insurance, mass InMail",
      "sla_minutes": null,
      "route_to": "none",
      "priority": "IGNORE",
      "action": "ignore_and_log",
      "indicators": [
        "sales_pitch",
        "mlm_mention",
        "insurance_mention",
        "mass_inmall",
        "non_professional"
      ]
    },
    "E": {
      "label": "SUSPICIOUS",
      "description": "Trust & Safety alert, verification request",
      "sla_minutes": 5,
      "route_to": "em",
      "priority": "CRITICAL",
      "action": "stop_all_activity_and_alert",
      "indicators": [
        "linkedin_trust_safety",
        "verification_request",
        "identity_confirmation",
        "account_security",
        "unusual_activity"
      ]
    }
  },
